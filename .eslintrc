{
  "root": true,
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "rules": {
    "max-len": 0,
    "max-depth": [1, 5],
    "max-statements": 0,
    "no-unused-vars": 0
  },
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "globals": {
    "require": true,
    "module": true,
    "global": true,
    "fetch": true
  },
  "extends": [
    "eslint-config-formio",
    "plugin:react/recommended",
    "plugin:react-native/all"
  ]
}
